		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<form style="max-width: 60rem; margin: 0 auto; background-color: transparent;" method="post" id="form-registrar">
                        <div class="card" style="background-color: rgba(255, 255, 255, 0.8);">
                            <div class="card-header"
                                style="background-color: transparent; color: white; border-bottom:solid 5px #044415;">
                                <h4 style="color: rgb(0, 0, 0); font-weight: bold;">Datos del Usuario</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-lg-6">
                                        <label for="nombre">Nombre</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese el nombre">
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label for="user">Nombre de usuario</label>
                                        <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese el usuario">
                                    </div>
                                    <!-- Campo de rol oculto con valor por defecto -->
                                    <div class="form-group col-lg-6">
                                        <label for="user">Correo Electrónico</label>
                                        <input type="text" class="form-control" id="correo" name="correo" placeholder="Ingrese el correo electrónico">
                                    </div>
                                    <input type="hidden" id="rol" name="rol" value="viewer">
                                    <div class="form-group col-lg-6">
                                        <label for="pass">Contraseña</label>
                                        <input type="password" class="form-control" id="pass" name="pass" placeholder="Ingrese la contraseña">
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="card-footer"
                                style="border-top: transparent; background-color: transparent; border-top:solid 5px #044415;">
                                <button type="submit" class="btn" style="background-color: #c29e03; color: white; width: 100%;">Guardar</button>
