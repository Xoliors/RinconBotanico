<script>

    $(document).ready(function () {
        /* Registrar */
        $("#form-registrar").submit(function (e) {
            e.preventDefault();
            data = {
                'nombre': $("#nombre").val(),
                'usuario': $("#usuario").val(),
                'rol': $("#rol").val(),
                'correo': $("#correo").val(),
                'pass': $("#pass").val()
            }
            let decide = confirm("¿Esta seguro de que desea Registrar?")
            if (decide) {
                $.post('/registro', data, function (rs, res) {
                    if (rs.status) {
                        alert("Datos Registrados Correctamente!");
                        location.reload();
                    }
                    else alert("Ocurrio un error al Registrar los datos!");
                });
            }
        });
        /* Registrar */
    });
</script>

